ninja_required_version = 1.1

builddir = build
appname  = template_pimpl

includes = 
libs     = 

ccflags  = -g -Wall -Wextra -std=c++11
ldflags  = 

rule cc
  command = clang++ $cflags $includes $ldflags $libs $in -o $out
  description = clang

build $builddir/$appname: cc main.cpp

build all: phony $builddir/$appname
default all
